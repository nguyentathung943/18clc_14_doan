<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor">
    <LinearLayout
        android:id="@+id/start"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="?attr/tintcolor"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/btn_back_video_view"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/back_icon" />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Video"
            android:textColor="?attr/textcolor"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/info"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/info"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/start"
        android:layout_above="@id/end"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/video_screen"
        android:onClick="click"
        >
        <VideoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/video"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/video_image"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/play_icon"
            android:id="@+id/play_btn"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/end"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="?attr/tintcolor"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="videoViewMenu"
            android:src="@drawable/shared_icon" />
        <ImageView
            android:layout_weight="6"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
           android:src="@drawable/non_liked_icon"
            android:id="@+id/like_video"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/trash_icon"
            android:id="@+id/btn_delete"
            android:onClick="videoViewMenu"/>
    </LinearLayout>
</RelativeLayout>